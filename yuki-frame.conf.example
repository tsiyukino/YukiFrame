# Yuki-Frame v2.0 Configuration
# Event-driven tool orchestration framework

[core]
# Logging configuration
log_file = logs/yuki-frame.log
log_level = INFO          # TRACE, DEBUG, INFO, WARN, ERROR, FATAL

# Process management
pid_file = yuki-frame.pid
max_tools = 100
message_queue_size = 1000

# Debug and control (NEW in v2.0)
enable_debug = no         # Enable debug tracing
enable_remote_control = no  # Enable remote control API
control_port = 9999       # Port for remote control (if enabled)

# ============================================
# Example Tools
# ============================================

# System Monitor
[tool:monitor]
command = python tools/monitor.py
description = System resource monitor
autostart = yes
restart_on_crash = yes
max_restarts = 5
subscribe_to = ALERT

# Logger Tool
[tool:logger]
command = python tools/logger.py
description = Event logger
autostart = yes
restart_on_crash = yes
max_restarts = 3
subscribe_to = 

# Alert Handler
[tool:alerter]
command = python tools/alerter.py
description = Alert notification handler
autostart = yes
restart_on_crash = yes
max_restarts = 3
subscribe_to = ALERT,ERROR,WARNING


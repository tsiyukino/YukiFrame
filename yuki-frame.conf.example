# Yuki-Frame v2.0 Configuration
# Event-driven tool orchestration framework with integrated control

[core]
# Logging configuration
log_file = logs/yuki-frame.log
log_level = INFO          # TRACE, DEBUG, INFO, WARN, ERROR, FATAL

# Process management
pid_file = yuki-frame.pid
max_tools = 100
message_queue_size = 1000

# Debug mode (NEW in v2.0)
enable_debug = no         # Enable debug tracing

# ============================================
# Example Tools
# ============================================

# System Monitor
[tool:monitor]
command = python tools/monitor.py
description = System resource monitor
autostart = yes
restart_on_crash = yes
max_restarts = 5
subscribe_to = ALERT

# Echo Tool (for testing)
[tool:echo]
command = python tools/echo.py
description = Echo received events
autostart = no           # Start manually when needed
restart_on_crash = no
subscribe_to = TEST

# Alert Handler
[tool:alerter]
command = python tools/alerter.py
description = Alert notification handler
autostart = yes
restart_on_crash = yes
max_restarts = 3
subscribe_to = ALERT,ERROR,WARNING

# Message Sender (example)
[tool:sender]
command = python tools/sender.py
description = Sends periodic messages
autostart = no           # Start manually
restart_on_crash = no
subscribe_to = 

# Message Receiver (example)
[tool:receiver]
command = python tools/receiver.py
description = Receives and displays messages
autostart = no           # Start manually
restart_on_crash = no
subscribe_to = MESSAGE,ACK


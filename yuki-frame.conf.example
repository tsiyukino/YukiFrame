# Yuki-Frame v2.0 Configuration
# Event-driven tool orchestration framework

[core]
# Logging configuration
log_file = logs/yuki-frame.log
log_level = INFO          # TRACE, DEBUG, INFO, WARN, ERROR, FATAL

# Process management
pid_file = yuki-frame.pid
max_tools = 100
message_queue_size = 1000

# Debug mode
enable_debug = no         # Enable debug tracing

# ============================================
# Interactive Console (NEW!)
# ============================================
# Console is now a regular tool!
# It uses stdin/stdout just like other tools
# Start it with autostart=yes for immediate console

[tool:console]
command = python yuki-console.py
description = Interactive console for framework control
autostart = yes           # Start console automatically
restart_on_crash = yes
max_restarts = 3
subscribe_to =            # Console doesn't need event subscriptions

# ============================================
# Example Tools
# ============================================

# System Monitor
[tool:monitor]
command = python tools/monitor.py
description = System resource monitor
autostart = yes
restart_on_crash = yes
max_restarts = 5
subscribe_to = ALERT

# Echo Tool (for testing)
[tool:echo]
command = python tools/echo.py
description = Echo received events
autostart = no           # Start manually when needed
restart_on_crash = no
subscribe_to = TEST

# Alert Handler
[tool:alerter]
command = python tools/alerter.py
description = Alert notification handler
autostart = yes
restart_on_crash = yes
max_restarts = 3
subscribe_to = ALERT,ERROR,WARNING

# Message Sender (example)
[tool:sender]
command = python tools/sender.py
description = Sends periodic messages
autostart = no           # Start manually
restart_on_crash = no
subscribe_to = 

# Message Receiver (example)
[tool:receiver]
command = python tools/receiver.py
description = Receives and displays messages
autostart = no           # Start manually
restart_on_crash = no
subscribe_to = MESSAGE,ACK

# ============================================
# Configuration Notes
# ============================================

# NEW in v2.0:
#   - Console is a tool! Just add [tool:console] with autostart=yes
#   - Unified architecture: everything uses pipes (stdin/stdout)
#   - No more -i flag needed
#   - Console can be started/stopped like any other tool

# Tool Configuration Options:
#   command           - Full path to executable (required)
#   description       - Human-readable description
#   autostart         - Start with framework (yes/no)
#   restart_on_crash  - Auto-restart if crashes (yes/no)
#   max_restarts      - Max restart attempts (0 = unlimited)
#   subscribe_to      - Comma-separated event types

# Event Subscriptions:
#   subscribe_to = EVENT1,EVENT2,EVENT3
#   Leave empty for no subscriptions

# Console Commands:
#   list                 - List all tools
#   start <tool>         - Start a tool
#   stop <tool>          - Stop a tool
#   restart <tool>       - Restart a tool
#   status <tool>        - Show detailed status
#   uptime               - Framework uptime
#   version              - Version info
#   shutdown             - Shutdown framework
#   help                 - Show help
#   quit                 - Exit console (framework continues)

# Quick Start:
#   1. Edit this file to add your tools
#   2. Make sure yuki-console.py is in same directory as executable
#   3. Run: ./yuki-frame -c yuki-frame.conf
#   4. Console starts automatically!
#   5. Type 'help' for available commands
